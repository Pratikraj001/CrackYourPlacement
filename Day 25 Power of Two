// (--- https://leetcode.com/problems/power-of-two/description/ ---)



class Solution {
public:
    bool isPowerOfTwo(int n) {
        
        if(n <= 0) return false;
        double a = log2(n);
        cout<<a;
        if(ceil(a) - floor(a) != 0){
            return false;
        }
        return true;
    }
};
